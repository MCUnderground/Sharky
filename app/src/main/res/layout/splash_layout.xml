<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#689F38">

    <ImageView
            android:src="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_width="350dp" android:layout_height="300dp"
            android:layout_marginTop="102dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Sharky"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginBottom="58dp"
            android:layout_width="110dp" android:layout_height="45dp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:id="@+id/textView2"/>
</RelativeLayout>